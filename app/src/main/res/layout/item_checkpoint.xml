<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:elevation="@dimen/dp_0"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#1DFFC1D0"
    app:cardMaxElevation="@dimen/dp_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/content_checkpoint_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_24"
            android:paddingBottom="@dimen/dp_24">

            <TextView
                android:layout_marginStart="@dimen/dp_24"
                android:layout_marginEnd="@dimen/dp_24"
                android:id="@+id/tv_checkpoint_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CHECKPOINT 1 ACBS KKLAKKJD"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_checkpoint_nfc"
                android:visibility="gone"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>
        <View
            android:id="@+id/statusview"
            android:layout_width="@dimen/dp_24"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/content_checkpoint_item"
            android:layout_alignTop="@id/content_checkpoint_item"
            android:background="@color/primaryColor" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>